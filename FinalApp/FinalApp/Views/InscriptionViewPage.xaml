<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalApp.Views.InscriptionViewPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveAdminCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            
            <Entry Text="{Binding Name}" Placeholder="Name"></Entry>
            <Entry Text="{Binding Password}" Placeholder="Description"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>