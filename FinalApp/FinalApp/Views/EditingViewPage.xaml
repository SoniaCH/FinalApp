<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalApp.Views.EditingViewPage" 
             Title="{Binding Title}">

    
    
    <ContentPage.ToolbarItems >
        <ToolbarItem Text="Save" Command="{Binding SaveEmployeeCommand}"/>
        <ToolbarItem Text="Edit" Command="{Binding EditEmployeeCommand}"/>
        <ToolbarItem Text="Back" Command="{Binding ReturnCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>

            <Entry Text="{Binding Text}" Placeholder="Name"></Entry>
            <Entry Text="{Binding Description}" Placeholder="Description"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>